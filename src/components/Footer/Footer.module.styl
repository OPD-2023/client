@import "variables.styl"

.footer {
  background-color: c-light-gray
  border-top: 6px solid c-main

  .outer {
    display: flex
    flex-direction: column
    padding: 24px 0

    & > :not(:last-child) {
      margin-bottom: 32px
    }

    .title {
      color: c-main
      font-size: 24px
    }

    .container {
      display: flex

      .info {
        display: flex
        margin-right: 100px
        flex-direction column
        max-width: 250px

        &:last-child {
          margin-right: 0
        }

        & :not(:last-child) {
          margin-bottom: 12px
        }

        .heading {
          font-size: 20px
        }

        .text {
          word-wrap: anywhere
          word-break keep-all
          font-size: 14px
        }

        .link {
          color: c-black
          text-decoration: underline
          font-size: 14px
        }
      }
    }
  }
}