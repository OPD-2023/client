@import "variables.styl"

.footer {
  width: 100%
  background-color: #ECECEC
  border-top: 6px solid c-main

  .outer {
    display: flex
    flex-flow: column nowrap
    gap: 32px
    padding: 32px 0

    .title {
      color: c-main
      font-size: 28px
    }

    .container {
      display: flex
      flex-flow: row nowrap
      gap: 100px

      .info {
        display: flex
        flex-flow: column nowrap
        gap: 12px
        max-width: 250px

        .heading {
          font-size: 24px
        }

        .text {
          word-wrap: anywhere
          word-break keep-all
          font-size: 15px
        }

        .link {
          color: #000
          text-decoration: underline
        }
      }
    }
  }
}