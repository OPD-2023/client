@import "variables.styl"

dotSize = 7px
imageSize = 200px

.card {
  display: flex
  flex-direction: column
  max-width: imageSize
  margin: sz-2x

  .imagesContainer {
    display: flex
    align-items: center
    justify-content: center
    width: imageSize
    height: imageSize
    border-radius: sz-3x
    overflow: hidden

    .currentImage {

    }

    .article {
      position: absolute
      top: 0
      left: 0
    }
  }

  .gallery {
    align-self: center
    margin: sz-1x
    line-height: 0

    .dot {
      display: inline-block
      width: dotSize
      height: dotSize
      margin-left: sz-1x
      background-color: c-gray
      border-radius: 50%

      &:first-child {
        margin-left: 0
      }

      &.__active {
        background-color: c-dark-gray
      }
    }
  }

  .title {
    word-break: break-word
    font-weight: 400
    font-size: 16px
  }

  .price {
    margin-top: sz-2x
    font-size: sz-4x
    font-weight: 700
  }

  .star {
    fill: c-main
  }

  .rating {
    display: flex
    align-items: center
    line-height: 0
    margin-top: sz-1x

    .measure {
      font-weight: 400
      font-size: 16px
      margin: sz-1x
      display: inline-block
    }
  }

}